<html lang="en-gb">
<header><%- include('_head') -%>
        <%- include('_header') -%>
</header>

<main>
    <section class="user">

        <img class="coverImage" src="<%= coverImageUrl %>" alt="cover image">
        <div class="profile">
            <img class="profile_image" src="<%= profileImageUrl %>" alt="profile image">
            <div class="profile_body">
                <p>
                    <%= name %>
                </p>
                <p>
                    <%= username %>
                </p>

                <p>
                    <%= email %>
                </p>


            </div>
        </div>
    </section>

    <section>
        <p class="posts_types">Posts</p>
        <div class="posts">
            <%for(let i=0;i<6;i++ ) {%>
                <div class="card">
                    <img class="card_image" src="<%= posts[i].imageUrl %>">
                    <div class="card_body">
                        <h4>
                            <%=name%>
                        </h4>
                        <h4>
                            <%= posts[i].createdAt %>
                        </h4>
                        <p class="message">
                            <%= posts[i].message %>
                        </p>
                    </div>
                </div>
                <%}%>
        </div>
        <button class="load_button">Load More</button>
    </section>

    <section>
        <p class="posts_types">Likes</p>
        <div class="posts">
            <%for(let i=0;i<6;i++ ) {%>
                <div class="card">
                    <img class="card_image" src="<%= likes[i].imageUrl %>">
                    <div class="card_body">
                        <h4>
                            <%=name%>
                        </h4>
                        <h4>
                            <%= likes[i].createdAt %>
                        </h4>
                        <p class="message">
                            <%= likes[i].message %>
                        </p>
                    </div>
                </div>

                <%}%>
        </div>
        <button class="load_button">Load More</button>
    </section>

    <section>
        <p class="posts_types">Dislikes</p>
        <div class="posts">

            <%for(let i=0;i<6;i++ ) {%>
                <div class="card">
                    <img class="card_image" src="<%= dislikes[i].imageUrl %>">
                    <div class="card_body">
                        <h4>
                            <%=name%>
                        </h4>
                        <h4>
                            <%= dislikes[i].reatedAt %>
                        </h4>
                        <p class="message">
                            <%= dislikes[i].message %>
                        </p>
                    </div>
                </div>
                <%}%>
        </div>
        <button class="load_button">Load More</button>
    </section>


</main>
<footer><%- include('_footer') -%></footer>

</html>